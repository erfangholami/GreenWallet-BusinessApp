<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.greenwallet.business.scenes.productFeatures.ui.details.CircleView
        android:id="@+id/iv_circle_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        app:circleGap="3dp"
        app:circleRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/tv_color_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_circle_view"
        app:layout_constraintStart_toStartOf="@+id/iv_circle_view"
        app:layout_constraintTop_toBottomOf="@+id/iv_circle_view"
        tools:text="Sky Blue"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>