<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="148dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:elevation="50dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/shop_green_rounded_left"
            android:src="@drawable/background_campaign" />

        <TextView
            android:id="@+id/tv_description_campaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/maison_neue_demi"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            tools:text="Description of the campaign" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_icon_campaign"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        tools:src="@drawable/shop_green_top_background" />

</LinearLayout>