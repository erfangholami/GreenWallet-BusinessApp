<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_small_xx">

    <ImageView
        android:id="@+id/iv_basket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_bag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorAccent" />

    <ImageView
        android:id="@+id/iv_badge"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_badge_green"
        app:layout_constraintBottom_toTopOf="@+id/iv_basket"
        app:layout_constraintEnd_toEndOf="@+id/iv_basket"
        app:layout_constraintStart_toEndOf="@+id/iv_basket"
        app:layout_constraintTop_toTopOf="@+id/iv_basket" />

    <TextView
        android:id="@+id/tv_badge_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_badge"
        app:layout_constraintEnd_toEndOf="@+id/iv_badge"
        app:layout_constraintStart_toStartOf="@+id/iv_badge"
        app:layout_constraintTop_toTopOf="@+id/iv_badge" />

</androidx.constraintlayout.widget.ConstraintLayout>