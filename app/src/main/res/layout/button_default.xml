<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/btn_default_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/btn_default"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_default_selector"
            android:fontFamily="@font/maison_neue_extra_bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/btn_default_progress_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminate="true"
        android:max="100"
        android:progress="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_default_container"
        app:layout_constraintEnd_toEndOf="@+id/btn_default_container"
        app:layout_constraintStart_toStartOf="@+id/btn_default_container"
        app:layout_constraintTop_toTopOf="@+id/btn_default_container" />


</androidx.constraintlayout.widget.ConstraintLayout>